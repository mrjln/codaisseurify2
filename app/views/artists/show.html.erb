<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @artist.name %>
  </div>
  <div class="panel-body">
    <h2> Biography </h2>
      <%= @artist.biography %>


  <div class="panel-body">
    <h2> Songs: </h2>
    <% @artist.songs.each do |song| %>

    <table id ="songsTable">
      <tr class="song" id="<%= song.id %>">
        <td width="40%">
          <%= song.titel %>
       </td>
        <td width="40%">
          <button class = "btn-warning"> <%= link_to "Delete song with HTML",[@artist, song], method: :delete, data: {confirm: "You ar deleting a song. Are your sure?"} %></button>
        </td>
        <td>
           <button><a href="", class = "deleteSong", id = <%= song.id %>> Delete Song</a></button>
        </td>
    </tr>
  </table>
      <%end%>
  </div>
<hr>
    <div class="panel-body">
      <h4> Add a song to the artist?</h4>
      <%= render "songs/form" %>
    </div>

      <div class="panel-body">

    <h4> Delete all songs from this artist? </h4>
      <button class= "btn-warning"> <a  href="#" id="delete-all-songs">Delete all songs</a> </button>

 </div>

    <h4> Delete this Artist?</h4>
        <%= link_to "Delete this Artist", artist_path(@artist.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this artist and all associated songs?" } %>
    </div>
  </div>
</div>
