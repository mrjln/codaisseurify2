<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @artist.name %>
  </div>
  <div class="panel-body">
    <h2> Biography </h2>
      <%= @artist.biography %>
  <div class="panel-body">
    <h2> Songs: </h2>
          <% @artist.songs.each do |song| %>
          <table style="width:80%">
      <tr class = "song">
           <td class = "song_titel" id = "<%=song.id%>" width="40%">
                                             <%= song.titel %> </td>
           <td width="40%"> Dubbelcheck: <%=song.id%> </td>
           <td width="20%"> <button class = "btn-warning"><%= link_to "Delete song",[@artist, song], method: :delete, data: {confirm: "You ar deleting a song. Are your sure?"} %></button></td>
      </tr>
    </table>
      <%end%>
  </div>
<hr>
    <div class="panel-body">
    <h4> Add a song to the artist?</h4>
        <%= render "shared/form" %>

    <h4> Delete this Artist?</h4>
        <%= link_to "Delete this Artist", artist_path(@artist.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this artist and all associated songs?" } %>
    </div>
  </div>
</div>
