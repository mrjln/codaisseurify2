        <td width="40%">
      <label class = "deleteOneSong" width="20%"> <button class = "btn-warning"><%= link_to "Delete song with HTML",[@artist, song], method: :delete, data: {confirm: "You ar deleting a song. Are your sure?"} %></button></label>
       <a href="#" onClick="deleteSong(this);" > Delete song </a>
